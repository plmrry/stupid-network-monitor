{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "target": "ESNext"
  },
  "exclude": ["node_modules"],
  "include": [
    "**/*.mts",
    "**/*.ts",
    "**/*.tsx",
    "biome.json",
    "forge.config.ts",
    "src/main.mjs",
    "src/speed-test.mjs"
  ]
}
