{
	"compilerOptions": {
		"allowJs": true,
		"esModuleInterop": true,
		"incremental": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"lib": ["dom", "dom.iterable", "esnext"],
		"module": "esnext",
		"moduleResolution": "node",
		"noEmit": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": false,
		"target": "ESNext"
	},
	"exclude": ["node_modules"],
	"include": [
		"biome.json",
		"forge.config.ts",
		"next-env.d.ts",
		"dist/types/**/*.ts",
		"dist/dev/types/**/*.ts",
		"**/*.mts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		".next/dev/types/**/*.ts"
	]
}
