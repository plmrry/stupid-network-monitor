{
	"name": "stupid-network-monitor",
	"version": "1.0.0",
	"description": "Uses Electron to put a stupid network activity monitor in the macOS menu bar.",
	"license": "CC0-1.0",
	"main": "main.mjs",
	"scripts": {
		"dev": "electron-forge start",
		"get-identities": "security find-identity -v -p codesigning",
		"magic": "node scripts/magic.mjs",
		"make-dmg": "electron-forge make",
		"move-output": "node scripts/move-output.mjs",
		"package": "pnpm generate-icon &&pnpm package-only && open ./out && pnpm move-output",
		"package-only": "electron-forge package --arch arm64 --platform darwin",
		"generate-icon": "node scripts/generate-icon.mjs",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"@resvg/resvg-js": "latest",
		"d3": "latest"
	},
	"devDependencies": {
		"@biomejs/biome": "latest",
		"@electron-forge/cli": "latest",
		"@electron-forge/maker-dmg": "latest",
		"@electron-forge/plugin-auto-unpack-natives": "latest",
		"@electron-forge/plugin-fuses": "latest",
		"@electron-forge/publisher-github": "latest",
		"@electron-forge/shared-types": "latest",
		"@electron/fuses": "latest",
		"@types/d3": "latest",
		"@types/node": "^22",
		"@typescript/native-preview": "latest",
		"electron": "latest",
		"sharp": "latest",
		"typescript": "latest"
	},
	"packageManager": "pnpm@9.15.9",
	"engines": {
		"node": "22.x",
		"pnpm": "9.15.9"
	},
	"os": [
		"darwin"
	],
	"build": {
		"appId": "com.paulmurray.stupid-network-monitor.app",
		"files": [
			"main.mjs"
		],
		"mac": {
			"category": "public.app-category.utilities",
			"target": [
				"dmg"
			]
		},
		"productName": "Stupid Network Monitor"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"electron",
			"esbuild",
			"fs-xattr",
			"macos-alias"
		]
	}
}
