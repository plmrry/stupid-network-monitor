{
  "name": "electron-network-chart",
  "version": "1.0.0",
  "description": "Network Chart Electron App for macOS",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --mac"
  },
  "os": ["darwin"],
  "devDependencies": {
    "electron": "latest",
    "electron-builder": "latest"
  },
  "pnpm": {
    "onlyBuiltDependencies": ["electron"]
  },
  "build": {
    "appId": "com.network-chart.app",
    "productName": "Network Chart",
    "mac": {
      "category": "public.app-category.utilities",
      "target": ["dmg"]
    },
    "files": ["main.js", "index.html"]
  }
}
